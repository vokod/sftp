<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_item_incoming"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:orientation="horizontal"
    android:backgroundTint="@android:color/white"
    tools:ignore="Overdraw">

    <ImageView
        android:id="@+id/iv_initial_item_incoming"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_margin="8dp"
        android:layout_gravity="center_vertical"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <com.actinarium.aligned.TextView
            android:id="@+id/tv_title_item_incoming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            app:leading="20sp"
            android:maxLines="1"
            />

        <com.actinarium.aligned.TextView
            android:id="@+id/tv_description_item_incoming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:lines="2"
            android:textSize="14sp"
            android:ellipsize="end"
            app:leading="20sp"
            app:lastLineDescent="8sp"

            />
    </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/ic_delete_black_24dp"
        android:id="@+id/iv_delete_item_incoming"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:tint="@color/grey"
        tools:ignore="ContentDescription" />
</LinearLayout>